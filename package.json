{
  "name": "@repeated-pleasant-games/tabletop",
  "version": "0.0.0-alpha.1",
  "author": {
    "name": "Joseph R Miles",
    "email": "joe@repeatedpleasant.games"
  },
  "homepage": "https://github.com/repeated-pleasant-games/tabletop",
  "license": "AGPL",
  "description": "A virtual tabletop (VTT) for tabletop roleplaying games (TTRPG).",
  "keywords": [
    "vtt",
    "ttrpg",
    "rpg",
    "virtual-tabletop",
    "tabletop",
    "dnd",
    "tabletop-gaming",
    "tabletop-rpg"
  ],
  "scripts": {
    "test": "jest --env=jsdom",
    "coverage": "jest --coverage",
    "build": "webpack",
    "serve": "webpack-dev-server --open"
  },
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "resize-observer-polyfill": "^1.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-redux": "^7.1.11",
    "css-loader": "^3.6.0",
    "husky": "^4.3.6",
    "jest": "^25.5.4",
    "sass": "^1.29.0",
    "sass-loader": "^8.0.2",
    "semantic-release": "^17.3.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.3.0",
    "ts-jest": "^25.5.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "commitlint": {
    "parserPreset": "./commitlint-parser-config",
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        75
      ],
      "footer-max-line-length": [
        1,
        "always",
        75
      ],
      "header-max-length": [
        1,
        "always",
        75
      ],
      "subject-min-length": [
        2,
        "always",
        1
      ],
      "subject-case": [
        1,
        "always",
        "sentence-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          ":sparkles:",
          ":construction_worker:",
          ":pencil2:",
          ":art:",
          ":zap:",
          ":bug:",
          ":tada:",
          ":heavy_plus_sign:",
          ":heavy_minus_sign:",
          ":recycle:",
          ":arrow_up:",
          ":arrow_down:",
          ":wrench:",
          ":hammer:",
          ":boom:",
          ":twisted_rightward_arrows:",
          ":rewind:",
          ":bulb:",
          ":label:",
          ":memo:",
          ":white_check_mark:"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  }
}
